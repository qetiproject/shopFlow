/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "baseUrl": "src",
    "paths": {
      "@components": ["app/components/index.ts"],
      "@core": ["app/core/index.ts"],
      "@features": ["app/features/index.ts"],
      "@pages": ["app/pages/index.ts"],
      "@types": ["app/types/index.ts"],
      "@utils": ["app/utils/index.ts"],
      "@test-utils": ["app/test-utils/index.ts"],
      "@custom-form/*": ["app/features/custom-form/*"],
      "@custom-form-validators": ["app/features/custom-form-validators/index.ts"],
      "@auth-module": ["app/modules/auth-module/index.ts"],
      "@env-dev": ["environment/environment.development"],
      "@user-module": ["app/modules/user-module/index.ts"],
    },
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
